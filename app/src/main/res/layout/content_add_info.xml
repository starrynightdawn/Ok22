<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.yyyyyyyyyyyyyyyyyyyy.ok22.AddInfo"
    tools:showIn="@layout/activity_add_info">

    <Button
        android:text="确认"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="97dp"
        android:id="@+id/addtruebt" />
    <Button
        android:text="返回"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/addtruebt"
        android:layout_marginBottom="32dp"
        android:id="@+id/addreturnbt" />

    <TextView
        android:text="请输入姓名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addnametv"
        android:layout_alignTop="@+id/addnameet"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/addnameet" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="姓名"
        android:ems="10"
        android:layout_marginTop="66dp"
        android:id="@+id/addnameet"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/addtruebt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/addidet"
        android:layout_alignBaseline="@+id/addidtv"
        android:layout_alignBottom="@+id/addidtv"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="请输入id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addidtv"
        android:layout_below="@+id/addnametv"
        android:layout_alignParentStart="true"
        android:layout_marginTop="64dp" />


</RelativeLayout>
